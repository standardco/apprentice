<script type="text/javascript" src="//maps.google.com/maps/api/js?key=AIzaSyCNkT70Bt9dK-Xwa_4ZyqnJRADzn7DBg0U"></script>
<script type="text/javascript" src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<%= javascript_include_tag "underscore", "data-turbolinks-track" => "reload" %>

<div id="container-fluid">
  <div id="map-container">	
    <div id="map" ><%= javascript_include_tag 'maps' %></div>
  </div>
</div>

 <script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {
  	zoom: 8
  }, 
  	internal: {
  		id: 'map'
  	}}, 
  	function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
